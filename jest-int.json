{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@DB/(.*)$": "<rootDir>/src/libs/db/$1",
    "^@COMMON/(.*)$": "<rootDir>/src/common/$1",
    "^@TODO/(.*)$": "<rootDir>/src/apps/todo/$1",
    "^@LOGGER/(.*)$": "<rootDir>/src/libs/logger/$1"
  },
  "forceExit": true
}