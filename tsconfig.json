{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,

    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    // 해당 paths 추가 시 ./jest-int.json에도 추가해줘야함
    "paths": {
      "@TODO/*": ["src/apps/todo/*"],
      "@COMMON/*": ["src/common/*"],
      "@DB/*": ["src/libs/db/*"],
      "@LOGGER/*": ["src/libs/logger/*"]
    }
  }
}
